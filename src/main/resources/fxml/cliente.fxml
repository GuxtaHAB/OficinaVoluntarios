<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="br.com.oficinas.gestaooficinas.fx.controller.ClienteController"
            prefWidth="1100" prefHeight="750">

    <top>
        <ToolBar styleClass="toolbar">
            <Button text="Sair" onAction="#onLogout"/>
            <Label text=" | "/>
            <Label fx:id="headerLabel"/>
        </ToolBar>
    </top>

    <center>
        <TabPane fx:id="tabPane" tabClosingPolicy="UNAVAILABLE" prefWidth="1100" prefHeight="720">
            <tabs>

                <!-- Meus Itens -->
                <Tab text="Meus Itens" closable="false">
                    <VBox spacing="12" styleClass="card">
                        <padding><Insets top="16" right="16" bottom="16" left="16"/></padding>

                        <TableView fx:id="itensTable" prefHeight="280">
                            <columns>
                                <TableColumn fx:id="colItemId"   text="ID"        prefWidth="80"/>
                                <TableColumn fx:id="colItemCat"  text="Categoria" prefWidth="180"/>
                                <TableColumn fx:id="colItemDesc" text="Descrição" prefWidth="520"/>
                            </columns>
                        </TableView>

                        <TitledPane text="Novo Item" expanded="true">
                            <GridPane hgap="8" vgap="8" style="-fx-padding: 10;">
                                <Label text="Categoria:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                                <ComboBox fx:id="categoriaBox" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                                <Label text="Descrição:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                                <TextField fx:id="descricaoField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                                <Button text="Criar" onAction="#onCriarItem"
                                        GridPane.rowIndex="2" GridPane.columnIndex="1" maxWidth="Infinity" styleClass="primary-btn"/>
                            </GridPane>
                        </TitledPane>
                    </VBox>
                </Tab>

                <!-- Agendar -->
                <Tab text="Agendar" closable="false">
                    <VBox spacing="12" styleClass="card">
                        <padding><Insets top="16" right="16" bottom="16" left="16"/></padding>

                        <Label text="Selecione o Item e a Oficina, depois informe data/hora" styleClass="h2"/>

                        <HBox spacing="12">
                            <VBox spacing="6" VBox.vgrow="ALWAYS">
                                <Label text="Itens"/>
                                <TableView fx:id="itensAgendarTable" prefWidth="520" prefHeight="200">
                                    <columns>
                                        <TableColumn fx:id="colAgiItemId"   text="ID"        prefWidth="80"/>
                                        <TableColumn fx:id="colAgiItemCat"  text="Categoria" prefWidth="160"/>
                                        <TableColumn fx:id="colAgiItemDesc" text="Descrição" prefWidth="280"/>
                                    </columns>
                                </TableView>
                            </VBox>

                            <VBox spacing="6" VBox.vgrow="ALWAYS">
                                <Label text="Oficinas"/>
                                <TableView fx:id="oficinasTable" prefWidth="520" prefHeight="200">
                                    <columns>
                                        <TableColumn fx:id="colOfId"     text="ID"        prefWidth="80"/>
                                        <TableColumn fx:id="colOfNome"   text="Nome"      prefWidth="240"/>
                                        <TableColumn fx:id="colOfCidade" text="Cidade/UF" prefWidth="200"/>
                                    </columns>
                                </TableView>
                            </VBox>
                        </HBox>

                        <HBox spacing="8">
                            <TextField fx:id="dataField" promptText="AAAA-MM-DD"/>
                            <TextField fx:id="horaField" promptText="HH:MM"/>
                            <TextField fx:id="obsField"  promptText="Observações (opcional)" prefWidth="400"/>
                            <Button text="Agendar" onAction="#onAgendar" styleClass="primary-btn"/>
                        </HBox>

                        <Label fx:id="agendarMsg"/>
                    </VBox>
                </Tab>

                <!-- Meus Agendamentos -->
                <Tab text="Meus Agendamentos" closable="false">
                    <VBox spacing="12" styleClass="card">
                        <padding><Insets top="16" right="16" bottom="16" left="16"/></padding>

                        <TableView fx:id="agendamentosTable" prefHeight="320">
                            <columns>
                                <TableColumn fx:id="colAgId"     text="ID"        prefWidth="80"/>
                                <TableColumn fx:id="colAgData"   text="Data/Hora" prefWidth="200"/>
                                <TableColumn fx:id="colAgOficina" text="Oficina"  prefWidth="320"/>
                                <TableColumn fx:id="colAgStatus" text="Status"    prefWidth="160"/>
                                <TableColumn fx:id="colAgVol"    text="Voluntário" prefWidth="240"/>
                            </columns>
                        </TableView>

                        <HBox spacing="8">
                            <TextField fx:id="cancelIdField" promptText="ID do agendamento"/>
                            <Button text="Cancelar" onAction="#onCancelar" styleClass="danger-btn"/>
                        </HBox>

                        <Label fx:id="cancelMsg"/>
                    </VBox>
                </Tab>

            </tabs>
        </TabPane>
    </center>
</BorderPane>
