<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="br.com.oficinas.gestaooficinas.fx.controller.LoginController"
      spacing="12" alignment="CENTER" prefWidth="380" prefHeight="280" styleClass="card">
  <padding>
    <Insets top="16" right="16" bottom="16" left="16"/>
  </padding>

  <Label text="Login" styleClass="h1"/>

  <TextField fx:id="emailField" promptText="E-mail" maxWidth="Infinity"/>

  <HBox spacing="5" alignment="CENTER">
    <PasswordField fx:id="senhaField" promptText="Senha" HBox.hgrow="ALWAYS"/>
    <TextField fx:id="senhaVisivelField" promptText="Senha" visible="false" managed="false" HBox.hgrow="ALWAYS"/>
    <Button fx:id="toggleSenhaBtn" text="ðŸ‘ï¸" onAction="#toggleSenhaVisivel" focusTraversable="false" styleClass="icon-btn"/>
  </HBox>

  <Button text="Entrar" onAction="#onLogin" maxWidth="Infinity" styleClass="primary-btn"/>
  <Button text="Criar conta" onAction="#onGoToRegister" maxWidth="Infinity" styleClass="secondary-btn"/>
  <Label fx:id="errorLabel" />
</VBox>
